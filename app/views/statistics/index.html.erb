<div class="well mat">
  <h2>Statistics</h2>
    <ul class="list-group">
      <li class="list-group-item">
        Best Time: <%= best_time(@cubing_sessions) %>
      </li>
      <li class="list-group-item">
        Best Average: <%= best_average(@cubing_sessions) %>
      </li>
    </ul>
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Date</th>
        <th>Average</th>
        <th colspan="12">Times</th>
      </tr>
      <% @cubing_sessions.each do |cubing_session| %>
        <tr><%= display_row(cubing_session) %></tr>
      <% end %>
    </table>
  </div>
  <div class="well">
    <h2>Import Session</h2>
    <p>You can upload files exported from JNetCube</p>
    <%= form_for :cubing_session, url: jnet_import_path do |f| %>
      <%= f.file_field :session_file, accept: 'text' %>
      <br />
      <%= f.submit "Import Session!", class: 'btn btn-primary btn-sm' %>
    <% end %>
  </div>
</div>
