<div class="well mat">
  <h2>Log In</h2>
  <%=form_tag login_path, :class => 'form-horizontal login-form' do%>
  <div class="form-group">
    <%=label_tag :email, 'Email', :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
    <%=text_field_tag :email, '',:class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%=label_tag :password, 'Password', :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
    <%=password_field_tag :password,'', :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%=label_tag :submit, '' %>
    <div class="col-lg-10 col-lg-offset-2">
      <%=submit_tag "Log in", :class => 'btn btn-primary' %>
    </div>
  </div>
  <%end%>
</div>
